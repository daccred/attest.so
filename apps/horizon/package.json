{
  "name": "@attestprotocol/horizon",
  "version": "1.7.0",
  "description": "Stellar Horizon Indexer for monitoring and processing blockchain events",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:ts": "ts-node src/index.ts",
    "lint": "eslint --fix src __tests__",
    "lint:ts": "tsc --noEmit",
    "test": "pnpm test:integration && pnpm test:unit",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "test:unit": "vitest run __tests__/*.unit.test.ts",
    "test:integration": "VITEST_MODE=integration vitest run __tests__/*.integration.test.ts",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:db:push": "prisma db push",
    "prisma:migrate:dev": "prisma migrate dev",
    "postinstall": "prisma generate"
  },
  "keywords": [
    "stellar",
    "horizon",
    "indexer",
    "blockchain",
    "soroban"
  ],
  "author": "Andrew Miracle <andrew@daccred.co>",
  "repository": {
    "type": "git",
    "url": "https://github.com/daccred/attest.so.git"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@stellar/stellar-sdk": "^14.1.0",
    "@types/pg": "^8.15.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "prisma": "^6.15.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.20",
    "@types/lodash": "^4.17.20",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.18.0",
    "@types/node-fetch": "^2.6.13",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.27.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.7",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.1.3"
  }
}
