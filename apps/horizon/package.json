    "cors": "^2.8.5",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "mongodb": "^6.16.0",
    "morgan": "^1.10.0",
    "@prisma/client": "^6.8.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.20",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/ui": "^3.1.3",
    "dotenv": "^16.4.5",
    "eslint": "^9.27.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.7",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vitest": "^3.1.3"
  }
