  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Introduction",
            "pages": [
              "overview",
              "guides/what-is-attestprotocol",
              "guides/why-attestations",
              "guides/how-it-works",
              "guides/use-cases"
            ]
          },
          {
            "group": "Getting Started",
            "pages": [
              "quickstart",
              "getting-started/installation",
              "getting-started/your-first-attestation",
              "getting-started/configuration"
            ]
          },
          {
            "group": "Core Concepts",
            "pages": ["concepts/attestations", "concepts/schemas", "concepts/authorities"]
          },
          {
            "group": "Blockchain Support",
            "pages": [
              "chains/solana/overview",
              "chains/stellar/overview",
              "chains/starknet/overview"
            ]
          },
          {
            "group": "Workflow Guides",
            "pages": ["guides/kyc-integration", "guides/dao-voting", "guides/event-attendance"]
          }
        ]
      },
      {
        "tab": "SDKs",
        "groups": [
          {
            "group": "TypeScript SDK",
            "pages": [
              "sdks/typescript/installation",
              "sdks/typescript/initialization",
              "sdks/typescript/methods",
              "sdks/typescript/examples"
            ]
          },
          {
            "group": "CLI & Tools",
            "pages": ["sdks/delegated-signatories", "sdks/cli"]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "SDK Overview",
            "pages": ["reference/overview"]
          },
          {
            "group": "Core Modules",
            "pages": ["reference/authority", "reference/schema", "reference/attest"]
          },
          {
            "group": "Administration",
            "pages": ["reference/administration", "reference/webhooks", "reference/errors"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/daccred/attest.so",
          "icon": "github"
        },
        {
          "anchor": "Community",
          "href": "https://discord.com/invite/7kVur5ja5m",
