{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "lib": ["es2022"],
    "module": "Node16",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": "./",
    "strict": true,
    "target": "es2022",
    "useDefineForClassFields": false
  },
  "include": [
    "src/**/*",
    "bin/**/*"
  ],
  "exclude": [
    "dist/**/*",
    "node_modules/**/*"
  ]
}